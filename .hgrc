[ui]
username = Neil John D. Ortega <neiljohn.ortega@gmail.com>
ssh = ssh -C
ignore = ~/.hgignore
editor = vim

# Prompt: http://stevelosh.com/projects/hg-prompt/
# Shelve: http://mercurial.selenic.com/wiki/ShelveExtension
# Bookmarks: http://mercurial.selenic.com/wiki/BookmarksExtension
# Flow: https://bitbucket.org/yujiewu/hgflow/wiki/Home
[extensions]
color =
bookmarks =
hgext.extdiff =
hgshelve = ~/.hgext/hgshelve/hgshelve.py
fetch =
prompt = ~/.hgext/hg-prompt/prompt.py
flow = ~/.hgext/hgflow/src/hgflow.py
mq =

[bookmarks]
track.current = True

[flow]
autoshelve = true

# Kaleidoscope: http://www.kaleidoscopeapp.com/
[extdiff]
cmd.ksdiff = /usr/local/bin/ksdiff-wrapper
opts.ksdiff = hg
